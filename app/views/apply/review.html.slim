h1 style='text-align: center;' Application Review

.row
  .col-sm-10.col-sm-offset-1
    button.btn.sh-default-btn href='#application-disclosure-modal' role='button' data-toggle='modal' Submit Client
.row
  .col-sm-5.col-sm-offset-1
    .panel.panel-default
      .panel-heading
        h3 Client info
      .panel-body
        = render 'client/personal_details'
  = render 'client/pet_list', no_edit: true
.row
  .col-sm-10.col-sm-offset-1
    .panel.panel-default
      .panel-heading
        h3 Client Application
      .panel-body
        = render 'client/situation_details', client_application: @client.client_application
.row
  .col-sm-10.col-sm-offset-1
    button.btn.sh-default-btn href='#application-disclosure-modal' role='button' data-toggle='modal' Submit Client

= render 'apply/shared/disclosure_modal'
